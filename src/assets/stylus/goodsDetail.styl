.goodsDetail
  position fixed
  top 0
  left 0
  bottom .44rem
  background-color white
  width 100%
  .baseInformation
    img
      display block
      width 100%
      height 7.5rem
    .icon-arrow_lift
      position absolute
      left .15rem
      top .15rem
      width .3rem
      height .3rem
      font-size .32rem
      color:red
    .saleInformation
      padding .36rem
      >p:first-child
        font-size .28rem
        font-weight bold
        color rgb(7,17,27)
      >p:nth-child(2)
        font-size .2rem
        color rgb(147,153,159)
        margin .16rem 0 .36rem
      >div
        display flex
        justify-content space-between
        font-size .24rem
        .rmb
          color rgb(240,20,20)
          font-weight bold
          font-size .28rem
          .originRmb
            font-size .2rem
            color rgb(147,153,159)
            text-decoration line-through
        >span
          display block
          width 1.48rem
          height .48rem
          background-color rgb(0,160,220)
          text-align center
          line-height .48rem
          border-radius .24rem
          color white
  .goodsIntroduction
    padding .36rem
    .title
      font-size .28rem
      color rgb(7,17,27)
      margin-bottom .12rem
    .content
      padding 0 .16rem
      font-size .24rem
      color rgb(77,85,93)
      line-height 2
  .goodsMark
    .line
      width 100%
      height 1px
      background-color rgba(7,17,27,.1)
    .remarkContent
      margin 0 .36rem
      .remarkItem
        padding .32rem 0
        border-1px(rgba(7,17,27,.1))
        .above
          display flex
          justify-content space-between
          font-size .2rem
          color rgb(147,153,159)
          margin-bottom .12rem
          .right
            display flex
            img
              display block
              width .24rem
              height .24rem
              border 1px solid red
              border-radius 50%
              margin-left .12rem
        .detailContent
          display flex
          align-items center
          font-size .24rem
          color rgb(7,17,27)
          .icon-thumb_up
            display block
            font-size .24rem
            color rgb(0,160,220)
            margin-right .08rem
