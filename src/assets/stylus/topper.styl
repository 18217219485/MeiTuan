.m-header
  .topper
    background-color :rgba(7,17,27,.5)
    padding :0.48rem 0.24rem 0.36rem 0.48rem
    display :flex
    position :relative
    color:rgb(255,255,255)
    .logo
      margin-right :0.32rem
      >img
        width :1.28rem
        height :1.28rem
        border-radius :4px
    .main
      .brand
        display :flex
        font-size :0.32rem
        font-weight :bold
        line-height :1
      .send
        font-size :0.24rem
        font-weight :200
        line-height :1
        margin : .16rem 0 .2rem 0
      .reduction
        display :flex
        font-size :.2rem
        font-weight :200
        line-height :1
    .num
      position :absolute
      right:.24rem
      bottom :.36rem
      padding :.15rem .18rem
      background-color:rgba(0,0,0,.2)
      border-radius :35%

  .announcement
    display :flex
    justify-content :space-between
    background-color :rgba(7,17,27,.2)
    padding :.24rem
    line-height :1
    p
      max-width :85%
      overflow :hidden
      white-space :nowrap
      text-overflow:ellipsis
    .icon-keyboard_arrow_right
      color :white
      font-size:.24rem
