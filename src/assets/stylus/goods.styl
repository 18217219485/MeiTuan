.goods-wrapper
  display :flex
  .hotList
    background-color: #f3f5f7
    width :1.6rem
    li
      padding :0 .24rem
      font-size:.24rem
      color:black
      p
        padding :.48rem 0
      &.active
        background-color :white
  .listDetail
    width :100%
    .name
      background-color :#f3f5f7
      height :.52rem
      line-height :.52rem
      color:rgb(147,153,159)
      border-left: 3px solid #d9dde1
      p
        margin-left:.28rem
    .food
      background-color :white
      margin : 0 .36rem
      li
        display :flex
        padding :.36rem 0
        position :relative
        border-1px(rgba(7,17,27,.1))
        img
          display :block
          width:1.08rem
          height :1.08rem
          border:1px solid #ccc
          margin-right:.2rem
        .description
          .title
            font-size:.28rem
            line-height :1
          .rate
            font-size:.2rem
            color:rgb(147,153,159)
            line-height :1
            margin :.16rem 0
          .rmb
            font-size:.3rem
            font-weight :bold
            color:rgb(240,20,20)
            .originRmb
              color:rgb(147,153,159)
              font-size:.2rem
              text-decoration :line-through
        .quantity-wrapper
          position :absolute
          right:0
          top:35%
